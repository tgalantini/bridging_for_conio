contract BridgingNFT is Context, ERC165, Ownable {
  using Strings for uint256;
  bytes32  hash;

  struct StakedToken {
     address tokenOwner;
     address collection;
     uint256 tokenID;
     uint256 canUnstake;
   }

// maps all addresses with hashes representing unique staked tokens
  mapping(address => mapping(bytes32 => StakedToken)) private whiteList;

// gives the user the permission to unstake the given token by the owner of the contract
  function addWhitelist(address _whitelistedAddress, address _addressCollezione, uint256 _tokenID) public onlyOwner {
      bytes32 _hash = getHash(_addressCollezione, _tokenID);
      whiteList[_whitelistedAddress][_hash].canUnstake = 1;
  }

  function isWhitelisted(address user, bytes32 tokenHash) public view returns (uint256){
    return whiteList[user][tokenHash].canUnstake;
  } 

  // user must call SetApprovalForAll on the collection address for this contract address 
  // before calling this function
  function stakeNFT(address _addressCollezione, uint256 _tokenID) public  { 
        IERC721 NFT = IERC721(_addressCollezione);// Create an instance of the NFT contract
        bytes32 _hash = getHash(_addressCollezione, _tokenID);
        whiteList[_msgSender()][_hash].collection = _addressCollezione;
        whiteList[_msgSender()][_hash].tokenID = _tokenID;
        whiteList[_msgSender()][_hash].tokenOwner = _msgSender();
        whiteList[_msgSender()][_hash].canUnstake = 0;
        NFT.transferFrom(_msgSender(), address(this), _tokenID);
  } 

  //FOR FUTURE USE
  // in case of ownership transfer of a staked NFT.
  function transferTokenOwner(address oldAddress, address newAddress, bytes32 givenHash) public onlyOwner{
      address _collectionTemp = whiteList[oldAddress][givenHash].collection;
      uint256 _tokenIDTemp = whiteList[oldAddress][givenHash].tokenID;
      uint256 _canUnstakeTemp = whiteList[oldAddress][givenHash].canUnstake;
      delete whiteList[oldAddress][givenHash];
      whiteList[newAddress][givenHash].tokenOwner = newAddress;
      whiteList[newAddress][givenHash].collection = _collectionTemp;
      whiteList[newAddress][givenHash].tokenID = _tokenIDTemp;
      whiteList[newAddress][givenHash].canUnstake = _canUnstakeTemp;
  }

  function unstakeNFT(address _addressCollezione, uint256 _tokenID) public {
        IERC721 NFT = IERC721(_addressCollezione); // Create an instance of the NFT contract
        bytes32 _localHash = getHash(_addressCollezione, _tokenID);
        require(_msgSender() == whiteList[_msgSender()][_localHash].tokenOwner, "Not owner of the token");
        require(whiteList[_msgSender()][_localHash].canUnstake == 1, "Not allowed to unstake" );  
        delete whiteList[_msgSender()][_localHash];
        NFT.transferFrom(address(this), _msgSender(), _tokenID);
  }

  // returns the hash of a given collection address and tokenID
  function getHash(address addressCollezione, uint256 tokenID) public pure returns (bytes32){
    return keccak256(abi.encode(addressCollezione, tokenID));
  }

  //returns the token owner of a collection address and tokenID
  function getTokenOwner(address addressCollezione, uint256 tokenID) public view returns (address){
    return whiteList[_msgSender()][keccak256(abi.encode(addressCollezione, tokenID))].tokenOwner;
  }
}